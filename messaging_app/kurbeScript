#!/bin/bash

echo "ğŸ” Checking if Minikube is installed..."
if ! command -v minikube >/dev/null 2>&1; then
    echo "âš™ï¸ Minikube not found. Installing Minikube..."
    curl -LO https://storage.googleapis.com/minikube/releases/latest/minikube-linux-amd64
    sudo install minikube-linux-amd64 /usr/local/bin/minikube
    rm minikube-linux-amd64
    echo "âœ… Minikube installed."
else
    echo "âœ… Minikube is installed."
fi

echo "ğŸ” Checking if Docker is available..."
if ! docker version >/dev/null 2>&1; then
    echo "âŒ Docker is not running or not available in WSL."
    echo "ğŸ’¡ Please start Docker Desktop on Windows and enable WSL integration for your distro."
    exit 1
fi

echo "âš¡ Starting Minikube with Docker driver..."
minikube start --driver=docker
if [ $? -ne 0 ]; then
    echo "âŒ Failed to start Minikube. Ensure Docker Desktop is running and WSL integration is enabled."
    exit 1
fi

echo "âœ… Minikube cluster started successfully!"

echo "ğŸ” Checking cluster info..."
kubectl cluster-info || echo "âš ï¸ Could not get cluster info. Check if Minikube started correctly."

echo "ğŸ” Retrieving available pods..."
kubectl get pods --all-namespaces || echo "âš ï¸ No pods found or cluster not ready."

echo "ğŸ‰ Kubernetes local cluster setup complete!"
