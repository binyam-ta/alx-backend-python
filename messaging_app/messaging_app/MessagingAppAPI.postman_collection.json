{
  "info": {
    "name": "Messaging App API",
    "_postman_id": "a1b2c3d4-e5f6-7890-1234-56789abcdef0",
    "description": "Postman collection for testing the messaging_app API with JWT, pagination, filtering, and permissions",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"user1\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/token/",
              "host": ["{{base_url}}"],
              "path": ["token"]
            }
          },
          "response": []
        },
        {
          "name": "Refresh Token",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refresh\": \"{{refresh_token}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/token/refresh/",
              "host": ["{{base_url}}"],
              "path": ["token", "refresh"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Conversations",
      "item": [
        {
          "name": "Create Conversation",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"participants\": [\"user1_id\", \"user2_id\"]\n}"
            },
            "url": {
              "raw": "{{base_url}}/conversations/",
              "host": ["{{base_url}}"],
              "path": ["conversations"]
            }
          },
          "response": []
        },
        {
          "name": "List Conversations",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/conversations/",
              "host": ["{{base_url}}"],
              "path": ["conversations"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Messages",
      "item": [
        {
          "name": "Send Message",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"conversation\": \"{{conversation_id}}\",\n  \"content\": \"Hello, this is a test message\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/messages/",
              "host": ["{{base_url}}"],
              "path": ["messages"]
            }
          },
          "response": []
        },
        {
          "name": "List Messages",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/messages/?page=1&ordering=-timestamp",
              "host": ["{{base_url}}"],
              "path": ["messages"],
              "query": [
                { "key": "page", "value": "1" },
                { "key": "ordering", "value": "-timestamp" }
              ]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Tests",
      "item": [
        {
          "name": "Unauthorized Access Test",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/conversations/",
              "host": ["{{base_url}}"],
              "path": ["conversations"]
            }
          },
          "response": []
        },
        {
          "name": "Access Another User's Conversation",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/conversations/{{other_conversation_id}}/",
              "host": ["{{base_url}}"],
              "path": ["conversations", "{{other_conversation_id}}"]
            }
          },
          "response": []
        }
      ]
    }
  ],
